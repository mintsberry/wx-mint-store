.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}

.pic {
  width: 160rpx;
  height: 160rpx;
}

.value-unit,
.price-unit {
  font-size: 32rpx !important;
}

.text {
  width: 160rpx;
  margin-top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  text-overflow: ellipsis;
  font-size: 20rpx;
  color: #666;
}

